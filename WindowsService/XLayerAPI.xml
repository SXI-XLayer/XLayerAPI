<service>
  
  <!-- ID of the service. It should be unique across the Windows system-->
  <id>XLayerAPI</id>
  <!-- Display name of the service -->
  <name>XLayerAPI</name>
  <!-- Service description -->
  <description>SXI XLayer API v3.3P5</description>
  
  <logpath>C:/SXIUtils/XLayerAPI/logs</logpath>
  
  <!-- Path to the executable, which should be started -->
  <executable>C:/Program Files/java/jdk-14.0.1/bin/java</executable>
  <arguments>-Xrs -Xmx512m -Xms256m -jar "C:/SXIUtils/XLayerAPI/XLayerAPI.jar" --spring.config.location=file:///C:/SXIUtils/XLayerAPI/application.properties</arguments>
  <logmode>rotate</logmode>

</service>
